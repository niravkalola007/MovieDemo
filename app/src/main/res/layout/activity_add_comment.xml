<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/app_bar" />

    <LinearLayout
        android:padding="16dp"


        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/movieImage"
            android:src="@drawable/placeholder"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:paddingLeft="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/movieTitle"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="God Father"
                android:textColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/movieSubTitle"
                android:textSize="16sp"


                android:text="Action, Drama"
                android:textColor="#21a9e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etShortComment"
        android:textColor="@color/gray"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:padding="24dp"
        android:maxLines="2"
        android:gravity="top|left"
        android:hint="Add a short comment"
        android:layout_margin="16dp"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        </EditText>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#21a9e1"
        android:padding="12dp"

        android:id="@+id/txtSubmitComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<ImageView
    android:layout_centerInParent="true"
    android:background="@drawable/ic_white_check_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
</LinearLayout>
